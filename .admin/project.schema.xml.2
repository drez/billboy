<database name="myproject1" defaultIdMethod="native" namespace="App" >
		<behavior name="GoatCheese" >
			<parameter name="set_config" value='{"project_url":"https:\/\/gc.local\/myproject1\/.admin\/","project_root":"\/var\/www\/gc\/p\/myproject1\/.admin\/"}' />
			<parameter name="set_debug_level" value="3" />
			<parameter name="add_hooks" value='{"afterFormObj":["template","billing_line","payment_line","cost_line","billing"],"beforeSave":["billing_line","cost_line"],"afterSave":["billing_line"],"beforeList":["billing"]}' />
			<parameter name="with_api" value="1" />
		</behavior>
		<behavior name="add_validator" />
		<behavior name="add_tablestamp" />
	<table name="authy" description="User" >
		<behavior name="GoatCheese" >
			<parameter name="set_parent_menu" value="Settings" />
			<parameter name="set_menu_priority" value="200" />
			<parameter name="set_list_hide_columns" value='["rights","passwd_hash","rights_all","rights_owner","rights_group"]' />
			<parameter name="add_search_columns" value='{"Name":[["username","%val","or"],["email","%val"]],"Primary group":[["id_authy_group","%val"]]}' />
			<parameter name="with_child_tables" value='["authy_group_x","authy_log"]' />
		</behavior>
		<column name="id_authy" type="INTEGER" size="10" required="true" primaryKey="true" autoIncrement="true" />
		<column name="validation_key" type="VARCHAR" size="32" required="false" />
		<column name="username" description="Username" type="VARCHAR" size="32" required="false" />
		<column name="fullname" description="Fullname" type="VARCHAR" size="100" required="false" />
		<column name="email" description="Email" type="VARCHAR" size="100" required="true" />
		<column name="passwd_hash" description="Password" type="VARCHAR" size="32" required="true" />
		<column name="expire" description="Expiration" type="DATE" required="false" />
		<column name="deactivate" description="Deactivated" type="ENUM" valueSet="Yes, No" required="false" />
		<unique >
			<unique-column name="username" />
		</unique>
		<validator column="email" >
			<rule name="required" message="authy_email_required1" />
			<rule name="unique" message="authy_email_in_use" />
		</validator>
		<validator column="passwd_hash" >
			<rule name="required" message="authy_password_required" />
		</validator>
	</table>
	<table name="country" description="Country" >
		<behavior name="GoatCheese" >
			<parameter name="set_parent_menu" value="Settings" />
		</behavior>
		<column name="id_country" description="" type="INTEGER" size="10" required="true" primaryKey="true" autoIncrement="true" />
		<column name="name" description="Name" type="VARCHAR" size="100" />
		<column name="code" description="Code" type="VARCHAR" size="3" />
		<column name="timezone" description="Timezone" type="VARCHAR" size="20" />
		<column name="timezone_code" description="Timezone code" type="VARCHAR" size="50" />
		<column name="priority" description="Priority" type="INTEGER" size="10" />
		<validator column="name" >
			<rule name="required" message="name_required" />
		</validator>
	</table>
</database>
